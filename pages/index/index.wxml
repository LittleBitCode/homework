<!--index.wxml-->
<view class="bg-view">
  <view class='grade-bg-view'>
    <view class="grade-view" bindtap='showOrhide'>
      <view>
        {{schoolInfo.grade}}{{schoolInfo.virtual_class}}
      </view>
      <view class='arrow-view'>
        <image wx:if="{{schoolInfo.grade}}" class='arrow' src='../../images/arrow.png'></image>
      </view>
    </view>
  </view>
  <block wx:if="{{homeworks.length > 0}}">
    <view class='card-view' >
    <!-- 按照日期 读取列表 -->
      <block wx:if="{{homeworks}}" wx:key=""  data-id="" wx:for="{{homeworks}}" wx:for-item="lists">
        <i-card class='card-list' homework="{{lists[0]}}" data-date="{{lists[0].date}}" data-holiday="{{lists[0].tag}}" bindtap='clickDetail'>
          <view slot="content">
          <!-- 每个日期下 根据学科读取列表 -->
            <block wx:if="{{homeworks}}" wx:key="{{homework.id}}" wx:index="{{index}}" data-id="{{homework.id}}"  wx:for="{{lists}}" wx:for-item="homework">
              <view class='subject-content-bg-view'>
                <view class='subject-content-view'>
                    {{homework.subject}}作业：
                </view>
                <view class='content-text-bg-view'>
                  <text class="content-text">
                    {{homework.content}}
                  </text>
                </view>
                 <view wx:if="{{index == lists.length - 1}}" class='show-detail-view'>
                  查看详情
                </view>
              </view>
            </block>
          </view>
          <!-- 卡片底部 展示的图片 视频  -->
          <view slot="media">
            <!-- 展示图片 -->
            <view class='media-bg-view'>
              <block wx:if="{{homeworks}}" wx:key=""  data-id="{{homework.id}}"  wx:for="{{lists}}" wx:for-item="homework">
                <block wx:if="{{index == 0}}">
                  <view class='footer-content-view' wx:key="" wx:for="{{images[homework.date]}}" wx:item="{{item}}" wx:if="{{images[homework.date].length > 0}}" data-index="{{index}}" data-date="{{homework.date}}" data-holiday="{{homework.tag}}"  catchtap="showImages">
                    <view class='footer-image-bg-view'>
                      <view class='footer-image-view'>
                        <image class='footer-image'  src="{{item}}?x-oss-process=image/resize,m_fixed,h_80,w_80"></image>
                      </view>
                    </view>
                  </view>
                </block>
                <!-- 展示视频 -->
                <block wx:for="{{homework.videos}}" wx:item="{{item}}" wx:key="{{index}}">
                  <view class='footer-content-view' wx:if="{{homework.videos.length > 0}}" catchtap="showVideos">
                    <view class='footer-image-bg-view'>          
                      <video class='foot-video' src="{{item}}" data-index="{{index}}" bindfullscreenchange="bindVideoScreenChange">
                      </video>
                    </view>
                  </view>
                </block>
              </block>
            </view>
          </view>
        </i-card>
      </block>
    </view>
  </block>
  <!-- 没有数据展示的空页面 -->
  <block wx:else>
    <view class="nodata-bg-view">
      <view class="nodata-view">
        <image class='nodata-image' mode='aspectFit' src='../../images/nodata.png'> </image>
        <label class='notice-label'>还没有作业，下拉刷新试试</label>
      </view>
    </view>
  </block>
</view>
<!-- 悬浮按钮  -->
<view wx:if="{{showFlex}}" class="right-flex-arrange-view" data-type="arrange" bindtap='navigateTo'>
  发布作业
</view>
<view wx:if="{{showFlex}}" class="left-flex-score-view" data-type="score" bindtap='navigateTo'>
  <view class='my-score-bg-view'>
    <view class=''> 我的积分 </view>
    <block wx:if="{{loveScore > 0}}">
      <view class='home-score-view'>{{' ' + loveScore}}</view>
    </block>
  </view>
</view>

<view wx:if="{{showFlex}}" class="right-flex-record-view" data-type="history" bindtap='navigateTo'>
  发布记录
</view>

<!-- 模态框 -->
<cover-view class="modals modals-bottom-dialog" hidden="{{hideModal}}">
  <cover-view class="modals-cancel" bindtap="hideModal">
  </cover-view>
  <cover-view class="bottom-dialog-body bottom-pos" animation="{{animationData}}">
    
    <cover-view class='modal-item-view'>
      <block wx:for="{{schools}}" wx:item="{{item}}" wx:key >
        <cover-view class="school-cell-view && {{ (schoolInfo.school_id == item.school_id && schoolInfo.grade_id == item.grade_id && schoolInfo.class_id == item.class_id ) ? 'choose-view' : ''}}" data-schoolinfo="{{item}}" bindtap='selectSchool'>
          <cover-view class='item-view'>
            {{item.grade}}{{item.virtual_class}}
          </cover-view>
        </cover-view>
      </block>
    </cover-view>
  </cover-view>
</cover-view>
<!-- 奖励积分弹出框 -->
<!-- mask -->
<view class="drawer-screen" bindtap="powerDrawer" wx:if="{{showModalStatus}}"></view>
<!--content-->
<!--使用animation属性指定需要执行的动画-->
<view animation="{{animationData}}" class="drawer-box" wx:if="{{showModalStatus}}">
  <!--drawer content-->
  <view class="drawer-content">
    <view class='drawer-notice'>签到成功</view>
    <view class="coin-socre-view">
      <image style='width:89rpx;height:89rpx;margin-right:15rpx;' src='../../images/coin.png'></image>
      +6分
    </view>
  </view>
</view>

<view class="guide-screen" wx:if="{{showCoachMarks}}">
  <view class='guide-page-view'> 
    <image style='height: 100%;width: 100%;' src='../../images/lead1.png' wx:if="{{showOne}}">
      <view class='one-btn' bindtap='showTwo'> </view>
      <view class='i-know-btn1' bindtap='allClose'> </view>
    </image>
    <image style='height: 100%;width: 100%;' src='../../images/lead2.png' wx:if="{{showTwo}}">
      <view class='two-btn' bindtap='showThree'> </view>
      <view class='i-know-btn2' bindtap='allClose'></view>
    </image>
    <image style='height: 100%;width: 100%;' src='../../images/lead3.png' wx:if="{{showThree}}">
      <view class='three-btn' bindtap='showFour'></view>
      <view class='i-know-btn3' bindtap='allClose'></view>
    </image>
    <image style='height: 100%;width: 100%;' src='../../images/lead4.png' wx:if="{{showFour}}">
      <view class='four-btn' bindtap='allClose'></view>
      <view class='i-know-btn4' bindtap='allClose'></view>
    </image>
  </view>
</view>

<!-- 广告 -->
<view class="advertisement-view {{showAdView ? '' : 'close'}}" bindtap='navigateToShare'>
  <image class='circle-close' bindtap='closeAd' src='../../images/circle_close.png'></image>
</view>
<!-- 客服 -->
<button class="right-flex-custom-view" style="" open-type="contact"></button>