/* pages/homework/homework.wxss */
page {
  height: 100%;
  /* background: rgb(248, 248, 248); */
}
.bg-view {
  height: 100%;
  width: 100%;
}
.school-info-view {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  background: white;
  height: 40px;
  width: 100%;
  justify-content: center;
  border: 0 solid rgb(248, 248, 248);
  border-bottom-width: 5px;
  font-weight: bold;
}
.date-view {
  height: 100%;
  width: 100%;
  text-align: center;
}
.date-label {
  font-size: 17px;
}

.time-label {
  margin-left: 20px;
  font-size: 15px;
  color: darkgray;
}

.line-view {
  margin: 0 15px;
  margin-top: 10px;
  height: 1px;
  border: 0px dashed darkcyan;
  border-top-width: 1px;

}

.image-view {
  margin-top: 20px;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.image-item {
  width: 50px;
  height: 50px;
}

.content-view {
  margin: 0px 15px;
}

.bottom-bg-view {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  
}

.save-button {
  width: 690rpx;
  background: rgb(245, 245, 245);
  color: rgb(2, 209 ,113);
  border-radius: 10rpx;
  font-weight: bold;
  font-size: 15px;
  height: 90rpx;
  line-height: 90rpx;
  margin-bottom: 20rpx;
}
.save-button::after{ 
  border: none; 
}
.delete-button {
  display: flex;
  height: 90rpx;
  align-items: center;
  text-align: center;
  background: rgb(245, 245, 245);
  color: red;
  width: 335rpx;
  border-radius: 10rpx;
  justify-content: center;
}

.edit-button {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  background: rgb(245, 245, 245);
  color: rgb(2, 209 ,113);
  width: 335rpx;
  border-radius: 10rpx;
}

.edit-del-bg-view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 90rpx;
  font-size: 15px;
  width: 690rpx;
  margin-bottom: 20rpx;
}

.back-button {
  width: 690rpx;
  background: white;
  color: rgb(2, 209 ,113);
  font-weight: bold;
  font-size: 15px;
  height: 90rpx;
  line-height: 90rpx;
  margin-bottom: 140rpx;
}
.back-button::after{ 
  border: none; 
}
.advertisement-view.close {
  display: none;
}