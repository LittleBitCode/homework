/* pages/share/share.wxss */
page {
  height: 100%;
  width: 100%;
  /* background: rgb(248, 248, 248); */
}
.activity-view {
  display: flex;
  justify-content: center;
}
.activity-image {
  width: 100%;
  height: 1896rpx; 
}
.btn-bg-view {
  margin-top: 0rpx;
  display: flex;
  justify-content: center;

}
.save-button {
  width: 100%;
  background: #f5f5f5;
  color: #1FAB9F;
  font-weight: bold;
  font-size: 15px;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 0;
  border: 0 solid #d2d2d2;
  border-right-width: 1px;
}
.save-button::after{ 
  border: none; 
  border-radius: 0;
}
.back-button {
  width: 100%;
  background: #f5f5f5;
  color: #1FAB9F;
  font-weight: bold;
  font-size: 15px;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 0;
}
.back-button::after{ 
  border: none; 
  border-radius: 0;
}