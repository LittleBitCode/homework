.i-card{
  overflow:hidden;
  position:relative;
  background:#fff;
  margin-top: 5px;
}

.i-card-full{
  margin:0;
  border-left:none;
  border-right:none;
  border-radius:0;
}
  
.i-card-header{
  display:flex;
  padding:0px 15px;
  line-height: 40px;
  align-items:center;
}
/* 周几 */
.i-card-header-content{
  text-align:left;
  font-size: 28rpx;
  color: rgb(51, 51, 51)
}
/* 日期 */
.i-card-header-date {
  display: inline-block;
  font-size: 24rpx;
  color: rgb(192, 192, 192)
}
.i-card-header-thumb{
  display:inline-block;
  width:64px;
  height:64px;
  position:relative;
  margin-left:auto;
  margin-right:auto;
  overflow:hidden;
  background-size:cover;
  vertical-align:middle
}

.i-card-header-title{
  display:inline-block;
  vertical-align:middle;
  font-size:19px;
  color:#1c2438
}

.i-card-header-extra{
  flex:1;
  text-align:right;
  font-size:24rpx;
  color:rgb(192, 192, 192)
}

/* 作业内容 */
.i-card-body{
  position:relative;
  padding-left: 15px;
  color:#495060;
  font-size:17px
}
/* 线 */
.i-card-body::before{
  content:'';
  position:absolute;
  top:0;
  left: 0px;
  width: 100%;
  height:200%;
  pointer-events:none;
  box-sizing:border-box;
  border:0px solid rgb(241, 241, 241);
  border-top-width:1px
}

.i-card-label{
  position:relative;
  padding:6px 16px;
  color:#495060;
  font-size:17px
}

.i-card-footer{
  position:relative;
  padding:6px 16px;
  color:#80848f;
  font-size:15px;
}
.i-card-media {
  display: flex;
}